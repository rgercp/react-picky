{
  "name": "react-picky",
  "version": "0.0.0-development",
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "jsnext:main": "dist/index.es.js",
  "license": "MIT",
  "scripts": {
    "commit": "git-cz",
    "test": "set NODE_ENV=test && jest",
    "test:watch": "set NODE_ENV=test && jest --watchAll",
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "prepublish": "npm run build",
    "predeploy": "cd example && npm install && npm run build",
    "deploy": "gh-pages -d example/build"
  },
  "dependencies": {
    "lodash.debounce": "^4.0.8",
    "lodash.isequal": "^4.5.0",
    "react-virtualized": "^9.16.1"
  },
  "devDependencies": {
    "@types/enzyme": "^3.1.6",
    "@types/enzyme-adapter-react-16": "^1.0.1",
    "@types/jest": "21.1.8",
    "@types/jsdom": "^11.0.4",
    "@types/lodash.debounce": "^4.0.3",
    "@types/lodash.isequal": "^4.5.2",
    "@types/node": "^9.3.0",
    "@types/react": "^16.0.34",
    "@types/react-dom": "^16.0.3",
    "@types/react-test-renderer": "^16.0.0",
    "@types/react-virtualized": "^9.7.10",
    "babel-eslint": "^8.2.1",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-latest": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "codecov": "^3.0.0",
    "cpx": "^1.5.0",
    "cross-env": "^5.1.3",
    "cz-conventional-changelog": "^2.1.0",
    "enzyme": "^3.2.0",
    "enzyme-adapter-react-16": "^1.1.0",
    "eslint": "^4.14.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.4.0",
    "gh-pages": "^1.1.0",
    "husky": "^0.14.3",
    "jest": "21.2.1",
    "jsdom": "^11.4.0",
    "react": "^16.2.0",
    "react-addons-test-utils": "^15.5.1",
    "react-dom": "^16.2.0",
    "react-hot-loader": "^3.1.3",
    "react-scripts": "^1.0.17",
    "react-test-renderer": "^16.2.0",
    "rollup": "^0.54.0",
    "rollup-plugin-babel": "^3.0.3",
    "rollup-plugin-commonjs": "^8.2.6",
    "rollup-plugin-node-resolve": "^3.0.2",
    "rollup-plugin-postcss": "^1.0.5",
    "rollup-plugin-sass": "^0.5.3",
    "rollup-plugin-typescript": "^0.8.1",
    "semantic-release": "^11.0.2",
    "ts-jest": "^22.0.1",
    "typescript": "^2.6.2"
  },
  "jest": {
    "collectCoverage": true,
    "mapCoverage": true,
    "testEnvironment": "jsdom",
    "modulePaths": ["./src"],
    "testMatch": ["**/tests/*.(ts|tsx|js)"],
    "moduleFileExtensions": ["js", "jsx", "ts", "tsx"],
    "setupFiles": ["./tests/helpers/setup.js"],
    "collectCoverageFrom": ["src/**/*.js", "!src/index.js", "!tests/**"],
    "transform": {
      "^.+\\.(tsx|ts)?$": "ts-jest",
      "^.+\\.(js|jsx)$": "babel-jest",
      "^.+\\.css$": "<rootDir>/config/jest/cssTransform.js",
      "^(?!.*\\.(js|jsx|css|json)$)": "<rootDir>/config/jest/fileTransform.js"
    },
    "transformIgnorePatterns": ["[/\\\\]node_modules[/\\\\].+\\.(js|jsx)$"]
  },
  "peerDependencies": {
    "react": "^16.2.0",
    "react-dom": "^16.2.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Aidurber/react-picky.git"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "files": ["dist"]
}

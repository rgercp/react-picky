{
  "name": "react-picky",
  "version": "0.0.0-development",
  "main": "dist/index.js",
  "typings": "./index.d.ts",
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf dist coverage",
    "commit": "git-cz",
    "build": "cross-env NODE_ENV=production rollup -c",
    "dev": "rollup -c -w",
    "pretest": "npm run lint && npm run build",
    "lint": "eslint src/",
    "test": "cross-env NODE_ENV=development jest && codecov",
    "test:watch": "cross-env NODE_ENV=development jest --watchAll",
    "semantic-release": "semantic-release"
  },
  "dependencies": {
    "lodash.debounce": "^4.0.8",
    "lodash.isequal": "^4.5.0",
    "react-tiny-virtual-list": "^2.1.4"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.1.2",
    "babel-jest": "^22.0.4",
    "babel-loader": "^7.1.2",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-es2015-rollup": "^3.0.0",
    "babel-preset-latest": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-1": "^6.24.1",
    "codecov": "^3.0.0",
    "cross-env": "^5.1.3",
    "cz-conventional-changelog": "^2.1.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-15": "^1.0.5",
    "enzyme-adapter-react-16": "^1.1.1",
    "eslint": "^4.14.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.4.0",
    "jest": "^22.0.4",
    "postcss-modules": "^1.1.0",
    "react": "^16.2.0",
    "react-addons-test-utils": "^15.5.1",
    "react-dom": "^16.2.0",
    "react-hot-loader": "^3.1.3",
    "react-test-renderer": "^16.2.0",
    "rollup": "^0.53.1",
    "rollup-plugin-babel": "^3.0.3",
    "rollup-plugin-commonjs": "^8.2.6",
    "rollup-plugin-jsx": "^1.0.3",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-postcss": "^0.5.5",
    "rollup-plugin-replace": "^2.0.0",
    "rollup-plugin-sass": "^0.5.3",
    "rollup-plugin-uglify": "^2.0.1",
    "rollup-watch": "^4.3.1",
    "semantic-release": "^11.0.2"
  },
  "babel": {
    "env": {
      "development": {
        "presets": ["es2015", "stage-1", "react", "flow"],
        "plugins": ["transform-class-properties"]
      },
      "staging": {
        "presets": [
          "flow",
          "stage-1",
          "react",
          [
            "es2015",
            {
              "modules": false
            }
          ]
        ],
        "plugins": ["external-helpers", "transform-class-properties"]
      },
      "production": {
        "presets": [
          "flow",
          "stage-1",
          "react",
          [
            "es2015",
            {
              "modules": false
            }
          ]
        ],
        "plugins": ["external-helpers", "transform-class-properties"]
      }
    }
  },
  "jest": {
    "collectCoverage": true,
    "mapCoverage": true,
    "modulePaths": ["./src"],
    "moduleFileExtensions": ["js", "jsx"],
    "setupFiles": ["./tests/helpers/setup.js"],
    "collectCoverageFrom": ["src/**/*.js", "!src/index.js", "!tests/**"],
    "transform": {
      "^.+\\.jsx$": "babel-jest",
      "^.+\\.js$": "babel-jest",
      "^.+\\.css$": "<rootDir>/config/jest/cssTransform.js",
      "^(?!.*\\.(js|jsx|css|json)$)": "<rootDir>/config/jest/fileTransform.js"
    },
    "transformIgnorePatterns": ["[/\\\\]node_modules[/\\\\].+\\.(js|jsx)$"]
  },
  "peerDependencies": {
    "prop-types": "^15.6.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Aidurber/react-picky.git"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  }
}
